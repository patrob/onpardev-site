  {
    title: "Technical Coaching",
    description: "Elevate your development team's skills through hands-on mentoring, code reviews, and tailored workshops.",
    icon: "üë®‚Äçüè´",
    benefits: ["Improved code quality", "Faster onboarding", "Better technical decisions", "Enhanced team collaboration"]
  },
  {
    title: "Software Delivery",
    description: "End-to-end implementation of complex software solutions with a focus on quality and maintainability.",
    icon: "üöÄ",
    benefits: ["Reliable, tested code", "Clean architecture", "On-time delivery", "Transparent process"]
  },
  {
    title: "Architecture Design",
    description: "Create robust, scalable software architectures that align with your business goals and technical requirements.",
    icon: "üèõÔ∏è",
    benefits: ["Future-proof solutions", "Scalable systems", "Reduced technical debt", "Clear documentation"]
  }
