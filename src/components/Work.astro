---
const projects = [
  {
    title: "E-Commerce Platform Migration",
    category: "Architecture Modernization",
    description: "Led the migration of a legacy e-commerce system to a modern, microservices-based architecture, resulting in 70% faster page loads and 35% higher conversion rates.",
    image: "https://images.pexels.com/photos/230544/pexels-photo-230544.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    tags: ["Microservices", "Cloud Migration", "Performance Optimization"]
  },
  {
    title: "Healthcare Data Integration",
    category: "Software Delivery",
    description: "Designed and implemented a secure data integration solution for a healthcare provider, connecting disparate systems and enabling real-time patient data access.",
    image: "https://images.pexels.com/photos/7579831/pexels-photo-7579831.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    tags: ["API Design", "Data Security", "Healthcare"]
  },
  {
    title: "Agile Transformation",
    category: "Technical Coaching",
    description: "Guided a team of 30+ developers through an agile transformation, implementing Scrum practices, CI/CD pipelines, and quality-focused development workflows.",
    image: "https://images.pexels.com/photos/3183183/pexels-photo-3183183.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    tags: ["Agile", "Team Coaching", "Process Improvement"]
  }
];
---

<section id="work" class="work">
  <div class="container">
    <div class="section-header animate-on-scroll">
      <h2>Case Studies</h2>
      <p class="section-description">Real-world examples of successful projects and transformations.</p>
    </div>
    
    <div class="projects">
      {projects.map((project, index) => (
        <div class={`project-card animate-on-scroll delay-${index * 100}`}>
          <div class="project-image">
            <img 
              src={project.image} 
              alt={project.title} 
              width="600" 
              height="400"
            />
            <div class="category">{project.category}</div>
          </div>
          <div class="project-content">
            <h3>{project.title}</h3>
            <p>{project.description}</p>
            <div class="tags">
              {project.tags.map(tag => (
                <span class="tag">{tag}</span>
              ))}
            </div>
            <a href="#contact" class="learn-more">View details</a>
          </div>
        </div>
      ))}
    </div>
    
    <div class="more-work animate-on-scroll">
      <p>Interested in more case studies or detailed portfolios?</p>
      <a href="#contact" class="btn">Get in touch</a>
    </div>
  </div>
</section>

<style>
  .work {
    background-color: white;
  }
  
  .section-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto var(--space-12);
  }
  
  .projects {
    display: grid;
    gap: var(--space-8);
  }
  
  .project-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-8);
    background-color: var(--neutral-50);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: transform var(--transition-normal) ease, box-shadow var(--transition-normal) ease;
  }
  
  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }
  
  .project-image {
    position: relative;
    height: 100%;
  }
  
  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .category {
    position: absolute;
    top: var(--space-4);
    left: var(--space-4);
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .project-content {
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
  }
  
  .project-content h3 {
    margin-bottom: var(--space-3);
    color: var(--neutral-900);
  }
  
  .project-content p {
    color: var(--neutral-700);
    margin-bottom: var(--space-4);
    flex-grow: 1;
  }
  
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
  }
  
  .tag {
    background-color: var(--primary-50);
    color: var(--primary-700);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 500;
  }
  
  .learn-more {
    align-self: flex-start;
    color: var(--primary-600);
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    transition: transform var(--transition-fast) ease;
  }
  
  .learn-more:hover {
    transform: translateX(5px);
  }
  
  .more-work {
    text-align: center;
    margin-top: var(--space-12);
    padding: var(--space-8);
    background-color: var(--neutral-50);
    border-radius: var(--radius-lg);
  }
  
  .more-work p {
    margin-bottom: var(--space-4);
    color: var(--neutral-700);
  }
  
  @media (max-width: 1024px) {
    .project-card {
      grid-template-columns: 1fr;
    }
    
    .project-image {
      height: 300px;
    }
  }
  
  @media (max-width: 640px) {
    .more-work {
      padding: var(--space-6);
    }
  }
</style>