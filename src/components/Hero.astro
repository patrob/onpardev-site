---
import Button from './Button.astro';
---

<section class="hero">
  <div class="container">
    <div class="hero-content">
      <div class="text-content">
        <h1>Expert Software Consulting That Delivers Results</h1>
        <p class="subtitle">Transform your technical challenges into competitive advantages with proven expertise in architecture, development, and team coaching.</p>
        <div class="cta-buttons">
          <Button href="#contact">Book a Free Consultation</Button>
          <Button href="#services" variant="secondary">Explore Services</Button>
        </div>
      </div>
      <div class="hero-image">
        <div class="hero-visual">
          <div class="code-window">
            <div class="window-header">
              <div class="window-controls">
                <span class="control red"></span>
                <span class="control yellow"></span>
                <span class="control green"></span>
              </div>
              <div class="window-title">software-consulting.js</div>
            </div>
            <div class="code-content">
              <div class="code-line"><span class="keyword">const</span> <span class="variable">consulting</span> = &#123;</div>
              <div class="code-line">  <span class="property">expertise</span>: <span class="string">'architecture'</span>,</div>
              <div class="code-line">  <span class="property">delivery</span>: <span class="string">'on-time'</span>,</div>
              <div class="code-line">  <span class="property">results</span>: <span class="string">'guaranteed'</span></div>
              <div class="code-line">&#125;;</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="hero-background"></div>
</section>

<style>
  .hero {
    position: relative;
    padding: 160px 0 40px;
    min-height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    background: linear-gradient(180deg, #FAFAFA 0%, #FFFFFF 100%);
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image:
      radial-gradient(circle at 20% 50%, rgba(14, 165, 233, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(139, 92, 246, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 40% 20%, rgba(20, 184, 166, 0.06) 0%, transparent 50%);
    z-index: -1;
  }
  
  .hero-content {
    display: grid;
    grid-template-columns: 1.1fr 0.9fr;
    gap: var(--space-12);
    align-items: center;
  }

  .text-content {
    max-width: 620px;
  }

  h1 {
    font-size: 4.5rem;
    line-height: 1.05;
    margin-bottom: var(--space-8);
    color: var(--text-900);
    font-weight: 800;
    letter-spacing: -0.045em;
  }

  .subtitle {
    font-size: 1.3125rem;
    line-height: 1.6;
    color: var(--text-600);
    margin-bottom: var(--space-10);
    font-weight: 400;
  }

  .cta-buttons {
    display: flex;
    gap: var(--space-4);
    margin-bottom: var(--space-8);
    flex-wrap: wrap;
  }
  
  .hero-image {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .hero-visual {
    width: 100%;
    max-width: 500px;
  }
  
  .code-window {
    background: var(--text-900);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.2),
      0 4px 8px rgba(0, 0, 0, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.05);
    overflow: hidden;
    transform: perspective(1200px) rotateY(-3deg) rotateX(2deg);
    transition: transform 400ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .code-window:hover {
    transform: perspective(1200px) rotateY(0deg) rotateX(0deg) translateY(-4px);
  }
  
  .window-header {
    background: var(--text-800);
    padding: var(--space-3) var(--space-4);
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid var(--text-700);
  }
  
  .window-controls {
    display: flex;
    gap: var(--space-2);
  }
  
  .control {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }
  
  .control.red {
    background: #ff5f57;
  }
  
  .control.yellow {
    background: #ffbd2e;
  }
  
  .control.green {
    background: #28ca42;
  }
  
  .window-title {
    color: var(--base-300);
    font-size: 0.875rem;
    font-weight: 500;
  }
  
  .code-content {
    padding: var(--space-6);
    font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
    font-size: 0.875rem;
    line-height: 1.6;
  }
  
  .code-line {
    color: var(--base-200);
    margin-bottom: var(--space-2);
  }
  
  .keyword {
    color: var(--secondary-400);
    font-weight: 600;
  }
  
  .variable {
    color: var(--primary-300);
  }
  
  .property {
    color: var(--accent-400);
  }
  
  .string {
    color: var(--primary-200);
  }
  
  @media (max-width: 1024px) {
    h1 {
      font-size: 3.5rem;
    }

    .hero-content {
      gap: var(--space-10);
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding-top: 140px;
      padding-bottom: 80px;
    }

    .hero-content {
      grid-template-columns: 1fr;
      gap: var(--space-12);
    }

    .text-content {
      max-width: 100%;
      text-align: center;
    }

    h1 {
      font-size: 3rem;
    }

    .subtitle {
      font-size: 1.125rem;
    }

    .cta-buttons {
      justify-content: center;
    }
  }

  @media (max-width: 640px) {
    h1 {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1.0625rem;
    }

    .cta-buttons {
      flex-direction: column;
      width: 100%;
    }

    .cta-buttons :global(.button) {
      width: 100%;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding-top: 120px;
      padding-bottom: 60px;
    }

    h1 {
      font-size: 2rem;
    }

    .hero-image {
      margin-top: var(--space-4);
    }
  }
</style>